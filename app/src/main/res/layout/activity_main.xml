            style="@style/diagonal_block"
            android:layout_width="wrap_content"
            android:text="8"
            />

        <TextView
            style="@style/diagonal_block"
            android:layout_width="wrap_content"
            android:text="9"
            />

        <TextView
            style="@style/diagonal_block"
            android:layout_width="wrap_content"
            android:text="10"
            />

        <TextView
            style="@style/diagonal_block"
            android:layout_width="wrap_content"
            android:text="11"
            />

        <TextView
            style="@style/diagonal_block"
            android:layout_width="wrap_content"
            android:text="12"
            />

    </com.ilyaeremin.diagonallayout.DiagonalLayout>

</ScrollView>