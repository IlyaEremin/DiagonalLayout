            android:layout_width="wrap_content"
            android:text="3"
            />

        <TextView
            style="@style/diagonal_block"
            android:layout_width="match_parent"
            android:text="4"
            />

        <TextView
            style="@style/diagonal_block"
            android:layout_width="wrap_content"
            android:text="5"
